<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.xizi_habittracker" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddNewHabit"
            android:label="@string/title_activity_add_new_habit" >
        </activity>
        <activity
            android:name=".view_reocrd"
            android:label="@string/title_activity_view_reocrd" >
        </activity>
        <activity
            android:name=".ViewRecord"
            android:label="@string/title_activity_view_record" >
        </activity>
        <activity
            android:name=".HabitHistory"
            android:label="@string/title_activity_habit_history" >
        </activity>
        <activity
            android:name=".TodayHabitDetail"
            android:label="@string/title_activity_today_habit_detail" >
        </activity>
    </application>

</manifest>
